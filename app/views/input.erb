  <input type='submit' value = 'Submit'>
</form>
<%else%>
<form action='/users/<%=session[:id]%>/tests/vision/both' method='post' class='text-center'>
  <input type='text' name='answer' autofocus="autofocus">
  <input type="hidden" name='fiveletters' value = <%=@list%>>
  <input type='submit' value = 'Submit'>
</form>
<%end%>

</div>
