p {font-size: <%= Vision.find(session[:line]).font_size.to_f%>px}
</style>

<p> <%=@list%> </p>


</div>

<%if session[:goagain]%>
<form action='/users/<%=session[:id]%>/tests/vision/single' method='post' class='text-center'>
